<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:background="@drawable/forecast_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/overcoat"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/suggestion_dress_index"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="100dp"
                android:gravity="center"
                tools:text="适宜厚外套"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:background="#E0FFFF"
            android:layout_marginLeft="15dp"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/sunscreen"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/suggestion_sunscreen"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="100dp"
                android:gravity="center"
                tools:text="无需防晒"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:background="#E0FFFF"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/sports"
                android:layout_marginLeft="25dp"
                />

            <TextView
                android:id="@+id/suggestion_sports"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="100dp"
                android:gravity="center"
                tools:text="宜室内运动"/>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0FFFF"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car"
                android:layout_marginLeft="25dp"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/suggestion_car"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="100dp"
                android:gravity="center"
                tools:text="不宜洗车"/>



        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E0FFFF"
            />



        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/aa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/umbrella"
                android:layout_marginLeft="25dp"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/suggestion_umbrella"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="100dp"
                android:gravity="center"
                tools:text="无需带伞"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E0FFFF"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/medicine"
                android:layout_marginLeft="25dp"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/suggestion_medicine"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="100dp"
                android:gravity="center"
                tools:text="不易感冒"/>

        </RelativeLayout>
    </LinearLayout>




</LinearLayout>